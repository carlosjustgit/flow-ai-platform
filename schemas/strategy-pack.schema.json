{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://flowproductions.pt/schemas/strategy-pack.schema.json",
  "title": "Strategy pack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "company_summary",
    "goals_and_constraints",
    "ideal_customer_profiles",
    "segments_and_priorities",
    "value_proposition",
    "positioning_statement",
    "competitors",
    "differentiation_points",
    "messaging_pillars",
    "content_themes",
    "content_series_ideas",
    "tone_of_voice_guidelines",
    "compliance_and_claims_rules",
    "CTA_patterns",
    "suggested_content_mix_by_channel",
    "assumptions",
    "unknowns_and_questions"
  ],
  "properties": {
    "company_summary": {
      "type": "string",
      "minLength": 50
    },
    "goals_and_constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "goals",
        "constraints"
      ],
      "properties": {
        "goals": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0
        }
      }
    },
    "ideal_customer_profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "pain_points",
          "desired_outcomes",
          "buying_triggers"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "pain_points": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "desired_outcomes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "buying_triggers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          }
        }
      }
    },
    "segments_and_priorities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "segment",
          "priority",
          "notes"
        ],
        "properties": {
          "segment": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "value_proposition": {
      "type": "string",
      "minLength": 30
    },
    "positioning_statement": {
      "type": "string",
      "minLength": 30
    },
    "competitors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "notes"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "differentiation_points": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "messaging_pillars": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "maxItems": 6
    },
    "content_themes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 6,
      "maxItems": 12
    },
    "content_series_ideas": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 5,
      "maxItems": 12
    },
    "tone_of_voice_guidelines": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "do",
        "avoid",
        "examples"
      ],
      "properties": {
        "do": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 3
        },
        "avoid": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 3
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2
        }
      }
    },
    "compliance_and_claims_rules": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "allowed",
        "not_allowed",
        "needs_proof"
      ],
      "properties": {
        "allowed": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "not_allowed": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "needs_proof": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0
        }
      }
    },
    "CTA_patterns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "maxItems": 10
    },
    "suggested_content_mix_by_channel": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "linkedin",
        "instagram",
        "facebook",
        "x"
      ],
      "properties": {
        "linkedin": {
          "type": "string",
          "minLength": 20
        },
        "instagram": {
          "type": "string",
          "minLength": 20
        },
        "facebook": {
          "type": "string",
          "minLength": 20
        },
        "x": {
          "type": "string",
          "minLength": 20
        }
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0
    },
    "unknowns_and_questions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0
    }
  }
}